# Gaps
default_border none
gaps inner 7
gaps outer 0
smart_gaps on

# Fixes
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Inputs
input * {
	xkb_layout fr
	xkb_variant bepo
}

