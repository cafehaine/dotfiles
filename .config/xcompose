# include the locale's default instructions
include "%L"

# Random symbols and emojis
<Multi_key> <c> <o> <c> <o> <space> : "☭" # hammer an sickle
<Multi_key> <s> <h> <r> <u> <g> <space> : "🤷" # shrug
<Multi_key> <b> <e> <e> <r> <space> : "🍺" # beer
<Multi_key> <b> <e> <e> <r> <s> <space> : "🍻" # beers
<Multi_key> <o> <k> <space> : "👌" # OK hand
<Multi_key> <t> <h> <i> <n> <k> <space> : "🤔" # thinking
<Multi_key> <h> <e> <a> <r> <t> <space> : "❤️" # heart
<Multi_key> <h> <e> <a> <r> <t> <b> <space> : "💙" # blue heart

